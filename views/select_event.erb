
<form action=event>
	<fieldset>
		<legend>Select an event</legend>
		<label>
			Events
			<select name=event onchange=document.forms[0].submit()>
				<option></option>
				<% events.each do |item| %>
					<option value="<%= item.id %>"><%= item.name %></option>
				<% end %>
			</select>
		</label>
	</fieldset>
</form>

